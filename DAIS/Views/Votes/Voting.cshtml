@model VotingViewModel

@{
    ViewBag.Title = "Choose birthday present";
}

<div class="card">
    <div class="card-header text-center">
        <h3>Choose a birthday gift for bithday for a @User.FindFirst("EmployeeName").Value</h3>
    </div>

    <div class="card-body">

        <form method="post" asp-controller="Votes" asp-action="Voting">
            <div class="form-group">

                <label asp-for="GiftId" class="control-label"></label>
                <select asp-for="GiftId" class="form-control"
                        asp-items="@Model.Gifts">
                    <option value="">-- Select --</option>
                </select>

                <span asp-validation-for="GiftId" class="text-danger"></span>

                <input type="hidden" asp-for="VoteId" />
                <input type="hidden" asp-for="LoggedUser" />

            </div>

            <button type="submit" class="btn btn-primary">Vote</button>

        </form>

    </div>

</div>


